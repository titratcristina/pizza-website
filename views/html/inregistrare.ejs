<body class="container">

	<% include ../components/header %>
	<main>
		<a href="#top" id="top-btn"><i class="fa fa-arrow-up"></i></a>

		<section>
			<div class="row text-center">
				<div class="col-12 mb-2 mt-5">
					<h1>Inregistrare utilizator</h1>
					<p class="mt-3">Completati formularul pentru o reducere de 10% la prima comandă.</p>
				</div>
				<div class="col-4"></div>
				<div class="col-4 text-left">

					<div class="card">
						<% if(!locals.rsstatus) { %>
						<!-- verific daca status e definit-->
						<form method="post" action="/inreg" class="date">
							<p>
								<label>Nume:</label><br>
								<input class="form-control" type="text" name="nume" placeholder="Pița Pasta">
							</p><br>
							<p>
								<label>Username:</label><br>
								<input class="form-control" type="text" name="username" placeholder="love.pizza">
							</p><br>
							<!-- <p>
								<label>Materii(separate cu virgula):</label><br>
								<input class="form-control" type="text" name="materii"
									value="tehnici web, inteligenta artificiala" size="50">
							</p><br> -->
							<p>
								<label>Email:</label><br>
								<input class="form-control" type="email" name="email" placeholder="pita.pasta@pizza.ro"
									size="50">
							</p><br>
							<p>
								<label>Data nașterii:</label><br>
								<input class="form-control" type="text" name="date" placeholder="dd#mm#yyyy" size="10">
							</p><br>
							<p>
								<label>Parola:</label><br>
								<input class="form-control" type="password" name="parola" value="">
							</p><br>
							<p>
								<label>Reintroduceti parola:</label><br>
								<input class="form-control" type="password" name="rparola" value="">
							</p><br>
							<p>
								<input class="btn btn-primary" type="submit" value="Submit">
							</p>
						</form>
						<% } else if(rsstatus=="ok"){ %>
						<p>Date introduse</p>
						<% } else {%>
						<div class="alert alert-danger " role="alert">
							Încearcă altă adresă de mail!
						</div>
						<% } %>
					</div>
				</div>
				<div class="col-4"></div>
			</div>
	</main>

	<% include ../components/footer %>

</body>

</html>